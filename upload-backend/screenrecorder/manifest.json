{
	"manifest_version": 3,
	"name": "Screen Recorder",
	"version": "1.0.0",
	"description": "Record your screen",
	"host_permissions": [
		"<all_urls>"
	],
	"permissions": [
		"desktopCapture",
		"activeTab",
		"storage",
		"tabCapture",
		"scripting",
		"tabs",
		"webNavigation",
		"<all_urls>"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/logo-16.png",
			"48": "images/logo-48.png",
			"128": "images/logo-128.png"
		}
	},
	"icons": {
		"16": "images/logo-16.png",
		"48": "images/logo-48.png",
		"128": "images/logo-128.png"
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/logo-16.png",
			"48": "images/logo-48.png",
			"128": "images/logo-128.png"
		}
	}
}
